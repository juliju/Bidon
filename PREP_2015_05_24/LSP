# Welcome to Sonic Pi v2.4

class Instrument
  def initialize (sonic_pi)
    @sonic_pi = sonic_pi
  end

  def play (arrayOfNotes, arrayOfTime)
    @sonic_pi.play_pattern_timed arrayOfNotes , arrayOfTime
  end 
end




class Pulse < Instrument
  def initialize (sonic_pi)
    super(sonic_pi)
  end
  
  def play (arrayOfNotes, arrayOfTime)
    @sonic_pi.use_synth :dull_bell
    @sonic_pi.play arrayOfNotes , amp:arrayOfTime
  end 

  def playGuitar()
    @sonic_pi.sample :ambi_piano, rate: @sonic_pi.rrand(0.125, 1.5)
    @sonic_pi.sleep 2
    @sonic_pi.sample :perc_bell, rate: rrand(0.125, 1.5)
  end
  
end



use_bpm 100

#son = Instrument.new(self)
son = Pulse.new(self)
son.play([:A4,:bb4,:b4,:C5], 0.41) 
sleep 1
